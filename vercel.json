{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "public/**"
      }
    }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "main.handler" },
    { "src": "/",        "dest": "main.handler" },
    { "src": "/(.*)",    "dest": "main.handler" }
  ]
}
